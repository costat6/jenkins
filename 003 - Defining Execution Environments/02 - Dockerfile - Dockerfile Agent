pipeline {
	agent {
		dockerfile {
			dir '003 - Nova Pasta'
			filename '02 - NOVO FILE'
			additionalBuildArgs '--build-arg "ENV_VARIABLE=Value for build"'
			args '-e "ENV_VARIABLE=Value for execution"'
		}
	}
	stages {
		stage('build'){
			steps {
				sh 'if [ "$ENV_VARIABLE" != "Value for execution" ]; then exit 1; fi'
			}
		}
	}
}